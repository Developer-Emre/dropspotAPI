{
  "name": "dropspot-api",
  "version": "1.0.0",
  "description": "DropSpot - Limited Stock and Waitlist Platform API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
