    "typescript": "^5.2.2",
    "tsx": "^4.4.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "prisma": "^5.6.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
